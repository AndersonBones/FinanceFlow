<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinanceFlow">

        <activity
            android:name=".ui.extrato.IndicadorValor"
            android:exported="false"
            android:label="@string/title_activity_indicador_valor"
            android:theme="@style/Theme.FinanceFlow" />
        <activity
            android:name=".ui.extrato.ExtratoHeader"
            android:exported="false"
            android:label="@string/title_activity_extrato_header"
            android:theme="@style/Theme.FinanceFlow" />
        <activity
            android:name=".ui.extrato.ExtratoItem"
            android:exported="false"
            android:label="@string/title_activity_extrato_item"
            android:theme="@style/Theme.FinanceFlow" />
        <activity
            android:name=".ui.extrato.ExtratoScreen"
            android:exported="false"
            android:label="@string/title_activity_extrato_screen"
            android:theme="@style/Theme.FinanceFlow" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FinanceFlow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>